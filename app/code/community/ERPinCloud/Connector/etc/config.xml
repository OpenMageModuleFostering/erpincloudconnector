<?xml version="1.0"?>
<config>
    <modules>
        <ERPinCloud_Connector>
            <version>2.1.2</version>
        </ERPinCloud_Connector>
    </modules>
    <frontend>
        <routers>
            <erpincloudconnector>
                <use>standard</use>
                <args>
                    <module>ERPinCloud_Connector</module>
                    <frontName>openerpsync</frontName>
                </args>
            </erpincloudconnector>
        </routers>
    </frontend>
    <global>
        <models>
            <erpincloudconnector>
                <class>ERPinCloud_Connector_Model</class>
            </erpincloudconnector>
            <sales>
                <rewrite>
                    <order_api>ERPinCloud_Connector_Model_Sales_Order_Api</order_api>
                </rewrite>
            </sales>
            <catalog>
                <rewrite>
                    <product_api>ERPinCloud_Connector_Model_Catalog_Product_Api</product_api>
                </rewrite>
                <rewrite>
                    <category_api>ERPinCloud_Connector_Model_Catalog_Category_Api</category_api>
                </rewrite>
            </catalog>
        </models>
        <resources>
            <erpincloudconnector_setup>
                <setup>
                    <module>ERPinCloud_Connector</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </erpincloudconnector_setup>
            <erpincloudconnector_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </erpincloudconnector_write>
            <erpincloudconnector_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </erpincloudconnector_read>
        </resources>
        <blocks>
            <erpincloudconnector>
                <class>ERPinCloud_Connector_Block</class>
            </erpincloudconnector>
        </blocks>
        <helpers>
            <erpincloudconnector>
                <class>ERPinCloud_Connector_Helper</class>
            </erpincloudconnector>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <init_imported_after_place_order>
                        <type>singleton</type>
                        <class>connector/observer</class>
                        <method>initImported</method>
                    </init_imported_after_place_order>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <admin>
        <routers>
            <erpincloudconnector>
                <use>admin</use>
                <args>
                    <module>ERPinCloud_Connector</module>
                    <frontName>connector</frontName>
                </args>
            </erpincloudconnector>
        </routers>
    </admin>
</config>
